<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petbutler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MenuLateral.MenuLateralActivity"
            android:label="@string/title_activity_menu_lateral"
            android:parentActivityName=".ui.Login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.petbutler.ui.Login.LoginActivity" />
        </activity>
        <activity android:name=".ui.EditarPerfil.EditarPerfilButlerActivity" />
        <activity android:name=".PerfilButlerActivity" />
        <activity android:name=".ui.EditarPerfil.EditarPerfilClienteActivity" />
        <activity android:name=".ui.ProcuraServico.SearchTransportActivity" />
        <activity android:name=".ui.ProcuraServico.SearchProductActivity" />
        <activity android:name=".ui.ProcuraServico.SearchHotelActivity" />
        <activity android:name=".ui.ProcuraServico.SearchWalkerActivity" />
        <activity android:name=".MainScreenActivity" />
        <activity android:name=".ui.Cadastro.CadastroActivity" />
        <activity android:name=".ui.Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>